<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_orange"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/linearColumnellipsesix"
            style="@style/groupStyle_deep_orange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLoginScreen"
                style="@style/groupStyle_deep_orange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/frameStackemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start">

                    <RelativeLayout
                        android:id="@+id/frameStackellipsesix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:layout_marginBottom="@dimen/_10px"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageEllipseSix"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_300px"
                            android:layout_gravity="start"
                            android:layout_marginEnd="@dimen/_30px"
                            android:scaleType="fitXY"
                             />

                        <include
                            android:id="@+id/toolbar_main"
                            layout="@layout/row_toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/_25px" />

                        <LinearLayout
                            android:id="@+id/linearLoginFild"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_30px"
                            android:layout_marginTop="@dimen/_50px"
                            android:layout_marginEnd="@dimen/_30px"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtForgotPassword2"
                                style="@style/txt_OpenSansExtraBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginStart="@dimen/_20px"
                                android:layout_marginTop="@dimen/_200px"
                                android:layout_marginBottom="@dimen/_1px"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="@string/msg_forgot_password"
                                android:textColor="@color/gray_2"
                                android:textSize="@dimen/_30sp"
                                tools:text="@string/msg_forgot_password" />

                            <TextView
                                android:id="@+id/txtForgotPassword3"
                                style="@style/txtOpenSansRomanSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginTop="@dimen/_10px"
                                android:layout_marginBottom="@dimen/_1px"
                                android:gravity="center"
                                android:text="@string/msg_enter_your_email"
                                android:textColor="@color/gray_70"
                                android:textSize="@dimen/_16sp"
                                tools:text="@string/msg_enter_your_email" />

                            <EditText
                                android:id="@+id/edtForgotEmail"
                                style="@style/edtBoxRoundedOutline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_30px"
                                android:background="@drawable/rectangle_bg_white_border"
                                android:ellipsize="end"
                                android:hint="@string/lbl_email"
                                android:inputType="textEmailAddress"
                                android:lineSpacingExtra="@dimen/_1px"
                                android:paddingStart="@dimen/_20px"
                                android:paddingTop="@dimen/_18px"
                                android:paddingEnd="@dimen/_30px"
                                android:paddingBottom="@dimen/_18px"
                                android:singleLine="true"
                                android:textColorHint="@color/gray_edt_hint_text"
                                android:textCursorDrawable="@drawable/cursor"
                                tools:ignore="Autofill" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnForgotSend"
                                style="@style/txtOpenSansRomanBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20px"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lineSpacingExtra="@dimen/_1px"
                                android:paddingStart="@dimen/_30px"
                                android:paddingTop="@dimen/_18px"
                                android:paddingEnd="@dimen/_30px"
                                android:paddingBottom="@dimen/_18px"
                                android:singleLine="true"
                                android:text="@string/lbl_send_email"
                                android:textAllCaps="false"
                                tools:text="@string/lbl_send_email" />

                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
