                        android:layout_weight="0.37"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/star_4"
                        android:textColor="@color/red_99"
                        android:textSize="@dimen/_19sp"
                        tools:text="@string/star_4" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flAllStar5"
                android:layout_width="@dimen/_70px"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8px">

                <View
                    android:id="@+id/viewRecStar5"
                    android:layout_width="@dimen/_70px"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_border_star_normal" />

                <LinearLayout
                    android:id="@+id/linearRowStar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_15px"
                    android:layout_marginTop="@dimen/_5px"
                    android:layout_marginEnd="@dimen/_15px"
                    android:layout_marginBottom="@dimen/_5px"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivStar5"
                        android:layout_width="@dimen/_17px"
                        android:layout_height="@dimen/_17px"
                        android:layout_marginTop="@dimen/_1px"
                        android:layout_marginBottom="@dimen/_1px"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_star" />

                    <TextView
                        android:id="@+id/tvStar5"
                        style="@style/txtOpenSansRomanSemiBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_11px"
                        android:layout_weight="0.37"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/star_5"
                        android:textColor="@color/red_99"
                        android:textSize="@dimen/_19sp"
                        tools:text="@string/star_5" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReviewList"
        style="@style/groupStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llShowIn"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/_10px"
        android:paddingStart="@dimen/_20px"
        android:paddingTop="@dimen/_10px"
        android:paddingEnd="@dimen/_20px" />

    <ProgressBar
        android:id="@+id/progressRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:theme="@style/ProgressBar" />

    <include
        android:id="@+id/llNoData"
        layout="@layout/no_data_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
</RelativeLayout>