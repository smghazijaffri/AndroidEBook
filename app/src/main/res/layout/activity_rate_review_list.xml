<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/row_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15px"
        android:layout_marginEnd="@dimen/_15px"
        android:layout_alignParentTop="true" />

    <HorizontalScrollView
        android:id="@+id/llShowIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_main"
        android:layout_marginTop="@dimen/_8px"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_20px"
        android:paddingEnd="@dimen/_20px"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/flAllStar"
                android:layout_width="@dimen/_90px"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/viewRecAll"
                    android:layout_width="@dimen/_90px"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_border_star_normal" />

                <LinearLayout
                    android:id="@+id/linearRowStarAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_15px"
                    android:layout_marginTop="@dimen/_5px"
                    android:layout_marginEnd="@dimen/_15px"
                    android:layout_marginBottom="@dimen/_5px"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivStarAll"
                        android:layout_width="@dimen/_17px"
                        android:layout_height="@dimen/_17px"
                        android:layout_marginTop="@dimen/_1px"
                        android:layout_marginBottom="@dimen/_1px"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_star" />

                    <TextView
                        android:id="@+id/tvStarAll"
                        style="@style/txtOpenSansRomanSemiBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_11px"
                        android:layout_weight="0.37"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/star_all"
                        android:textColor="@color/red_99"
                        android:textSize="@dimen/_19sp"
                        tools:text="@string/star_all" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flAllStar1"
                android:layout_width="@dimen/_70px"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8px">

                <View
                    android:id="@+id/viewRecStar1"
                    android:layout_width="@dimen/_70px"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_border_star_normal" />

                <LinearLayout
                    android:id="@+id/linearRowStar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_15px"
                    android:layout_marginTop="@dimen/_5px"
                    android:layout_marginEnd="@dimen/_15px"
                    android:layout_marginBottom="@dimen/_5px"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivStar1"
                        android:layout_width="@dimen/_17px"
                        android:layout_height="@dimen/_17px"
                        android:layout_marginTop="@dimen/_1px"
                        android:layout_marginBottom="@dimen/_1px"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_star" />

                    <TextView
                        android:id="@+id/tvStar1"
                        style="@style/txtOpenSansRomanSemiBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_11px"
                        android:layout_weight="0.37"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/star_1"
                        android:textColor="@color/red_99"
                        android:textSize="@dimen/_19sp"
                        tools:text="@string/star_1" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flAllStar2"
                android:layout_width="@dimen/_70px"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8px">

                <View
                    android:id="@+id/viewRecStar2"
                    android:layout_width="@dimen/_70px"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_border_star_normal" />

                <LinearLayout
                    android:id="@+id/linearRowStar2"
                    android:layout_width="wrap_content"
