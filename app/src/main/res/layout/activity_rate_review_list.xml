                    android:layout_marginStart="@dimen/_15px"
                    android:layout_marginTop="@dimen/_5px"
                    android:layout_marginEnd="@dimen/_15px"
                    android:layout_marginBottom="@dimen/_5px"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivStar2"
                        android:layout_width="@dimen/_17px"
                        android:layout_height="@dimen/_17px"
                        android:layout_marginTop="@dimen/_1px"
                        android:layout_marginBottom="@dimen/_1px"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_star" />

                    <TextView
                        android:id="@+id/tvStar2"
                        style="@style/txtOpenSansRomanSemiBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_11px"
                        android:layout_weight="0.37"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/star_2"
                        android:textColor="@color/red_99"
                        android:textSize="@dimen/_19sp"
                        tools:text="@string/star_2" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flAllStar3"
                android:layout_width="@dimen/_70px"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8px">

                <View
                    android:id="@+id/viewRecStar3"
                    android:layout_width="@dimen/_70px"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_border_star_normal" />

                <LinearLayout
                    android:id="@+id/linearRowStar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_15px"
                    android:layout_marginTop="@dimen/_5px"
                    android:layout_marginEnd="@dimen/_15px"
                    android:layout_marginBottom="@dimen/_5px"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivStar3"
                        android:layout_width="@dimen/_17px"
                        android:layout_height="@dimen/_17px"
                        android:layout_marginTop="@dimen/_1px"
                        android:layout_marginBottom="@dimen/_1px"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_star" />

                    <TextView
                        android:id="@+id/tvStar3"
                        style="@style/txtOpenSansRomanSemiBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_11px"
                        android:layout_weight="0.37"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/star_3"
                        android:textColor="@color/red_99"
                        android:textSize="@dimen/_19sp"
                        tools:text="@string/star_3" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flAllStar4"
                android:layout_width="@dimen/_70px"
