<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70A1FF"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/linearColumnellipsesix"
            style="@style/groupStyle_deep_orange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLoginScreen"
                style="@style/groupStyle_deep_orange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/frameStackemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start">

                    <RelativeLayout
                        android:id="@+id/frameStackellipsesix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:layout_marginBottom="@dimen/_10px"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSkip"
                            style="@style/btnSolidRoundedSkip"
                            android:layout_width="@dimen/_70px"
                            android:layout_height="@dimen/_30px"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/_10px"
                            android:layout_marginTop="@dimen/_50px"
                            android:layout_marginEnd="@dimen/_20px"
                            android:layout_marginBottom="@dimen/_10px"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:paddingStart="@dimen/_15px"
                            android:paddingTop="@dimen/_5px"
                            android:paddingEnd="@dimen/_15px"
                            android:paddingBottom="@dimen/_5px"
                            android:singleLine="true"
                            android:text="@string/lbl_skip"
                            android:textAllCaps="false"
                            tools:text="@string/lbl_skip" />

                        <ImageView
                            android:id="@+id/imageEllipseSix"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_300px"
                            android:layout_gravity="start"
                            android:layout_marginEnd="@dimen/_30px"
                            android:scaleType="fitXY"
                           />

                        <LinearLayout
                            android:id="@+id/linearWelcomeBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_marginStart="@dimen/_30px"
                            android:layout_marginTop="@dimen/_70px"
                            android:layout_marginEnd="@dimen/_30px"
                            android:layout_marginBottom="@dimen/_30px"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtWelcomeBack"
                                style="@style/txt_OpenSansExtraBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@string/lbl_welcome_back"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_30sp"
                                tools:text="@string/lbl_welcome_back" />

                            <TextView
                                android:id="@+id/txtLetsLoginA"
                                style="@style/txt_OpenSansRomanBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5px"
                                android:layout_marginEnd="@dimen/_10px"
                                android:ellipsize="end"
                                android:lineSpacingExtra="@dimen/_1px"
                                android:singleLine="true"
                                android:text="@string/lbl_let_s_log_in_a"
                                android:textColor="@color/gray_trans_99"
                                android:textSize="@dimen/_15sp"
                                tools:text="@string/lbl_let_s_log_in_a" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLoginFild"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearWelcomeBack"
                            android:layout_marginStart="@dimen/_30px"
                            android:layout_marginTop="@dimen/_50px"
                            android:layout_marginEnd="@dimen/_30px"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edtEmail"
                                style="@style/edtBoxRoundedOutline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rectangle_bg_white_border"
                                android:ellipsize="end"
                                android:hint="@string/lbl_email"
                                android:inputType="textEmailAddress"
                                android:lineSpacingExtra="@dimen/_1px"
                                android:paddingStart="@dimen/_20px"
                                android:paddingTop="@dimen/_18px"
                                android:paddingEnd="@dimen/_30px"
                                android:paddingBottom="@dimen/_18px"
                                android:singleLine="true"
                                android:textColorHint="@color/gray_edt_hint_text"
                                android:textCursorDrawable="@drawable/cursor"
                                tools:ignore="Autofill" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15px"
                                android:textCursorDrawable="@drawable/cursor"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                app:hintAnimationEnabled="false"
                                app:hintEnabled="false"
                                app:passwordToggleEnabled="true">

                                <EditText
                                    android:id="@+id/edtPass"
                                    style="@style/edtBoxRoundedOutline"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rectangle_bg_white_border"
                                    android:ellipsize="end"
                                    android:hint="@string/lbl_pass"
                                    android:inputType="textPassword"
                                    android:lineSpacingExtra="@dimen/_1px"
                                    android:paddingStart="@dimen/_20px"
                                    android:paddingTop="@dimen/_18px"
                                    android:paddingEnd="@dimen/_30px"
                                    android:paddingBottom="@dimen/_18px"
                                    android:singleLine="true"
                                    android:textColorHint="@color/gray_edt_hint_text"
                                    android:textCursorDrawable="@drawable/cursor"
                                    tools:ignore="Autofill" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linearRowrememberme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30px"
                    android:layout_marginTop="@dimen/_10px"
                    android:layout_marginEnd="@dimen/_30px"
                    android:orientation="horizontal">

                    <cn.refactor.library.SmoothCheckBox
                        android:id="@+id/cbRemMe"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_5px"
                        android:layout_marginBottom="@dimen/_2px"
                        app:color_checked="@color/red_99"
                        app:color_tick="@color/check_box_tick_login"
                        app:color_unchecked="@color/check_box_bg_login"
                        app:color_unchecked_stroke="@color/check_box_circle_login" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/tvForgotPassword"
                        android:layout_toEndOf="@+id/cbRemMe"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtMe"
                            style="@style/txt_OpenSansRomanBold"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginStart="@dimen/_5px"
                            android:layout_marginTop="@dimen/_5px"
                            android:layout_marginBottom="@dimen/_2px"
                            android:layout_weight="0.46"
                            android:ellipsize="end"
                            android:lineSpacingExtra="@dimen/_1px"
                            android:singleLine="true"
                            android:text="@string/lbl_remember_me"
                            android:textColor="@color/gray_trans_99"
                            android:textSize="@dimen/_15sp"
                            tools:text="@string/lbl_remember_me" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvForgotPassword"
                        style="@style/txt_OpenSansRomanBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_5px"
                        android:layout_marginBottom="@dimen/_2px"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_1px"
                        android:singleLine="true"
                        android:text="@string/msg_forgot_password"
                        android:textColor="@color/gray_trans_99"
                        android:textSize="@dimen/_15sp"
                        tools:text="@string/msg_forgot_password" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogIn"
                    style="@style/txtOpenSansRomanBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30px"
                    android:layout_marginTop="@dimen/_20px"
                    android:layout_marginEnd="@dimen/_30px"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_1px"
                    android:paddingStart="@dimen/_30px"
                    android:paddingTop="@dimen/_18px"
                    android:paddingEnd="@dimen/_30px"
                    android:paddingBottom="@dimen/_18px"
                    android:singleLine="true"
                    android:text="@string/lbl_log_in"
                    android:textAllCaps="false"
                    tools:text="@string/lbl_log_in" />

                <RelativeLayout
                    android:id="@+id/linearRowPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30px"
                    android:layout_marginTop="@dimen/_15px"
                    android:layout_marginEnd="@dimen/_30px"
                    android:orientation="horizontal">

                    <cn.refactor.library.SmoothCheckBox
                        android:id="@+id/cbPrivacyTerms"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_5px"
                        android:layout_marginBottom="@dimen/_2px"
                        app:color_checked="@color/check_box_check_bg_login"
                        app:color_tick="@color/check_box_tick_login"
                        app:color_unchecked="@color/check_box_bg_login"
                        app:color_unchecked_stroke="@color/check_box_circle_login" />

                    <TextView
                        android:id="@+id/txtPrivacyText"
                        style="@style/txt_OpenSansRomanBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5px"
                        android:layout_marginTop="@dimen/_5px"
                        android:layout_marginBottom="@dimen/_2px"
                        android:layout_toEndOf="@+id/cbPrivacyTerms"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_1px"
                        android:singleLine="true"
                        android:text="@string/msg_by_signing_in_y"
                        android:textColor="@color/gray_trans_99"
                        android:textSize="@dimen/_15sp"
                        tools:text="@string/msg_by_signing_in_y" />

                    <TextView
                        android:id="@+id/tvPrivacyTerms"
                        style="@style/txt_OpenSansRomanBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5px"
                        android:layout_marginTop="@dimen/_5px"
                        android:layout_marginBottom="@dimen/_2px"
                        android:layout_toEndOf="@+id/txtPrivacyText"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_1px"
                        android:singleLine="true"
                        android:text="@string/msg_by_signing_up_policy"
                        android:textColor="@color/login_text"
                        android:textSize="@dimen/_15sp"
                        tools:text="@string/msg_by_signing_up_policy" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearColumnorcontinuewit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30px"
                    android:layout_marginTop="@dimen/_50px"
                    android:layout_marginEnd="@dimen/_30px"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtOrcontinuewit"
                        style="@style/txt_OpenSansRomanBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_1px"
                        android:singleLine="true"
                        android:text="@string/msg_or_continue_with"
                        android:textColor="@color/gray_trans_99"
                        android:textSize="@dimen/_15sp"
                        tools:text="@string/msg_or_continue_with" />

                    <LinearLayout
                        android:id="@+id/linearRowfacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20px"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llFacebook"
                            style="@style/SocialBtnStyleWhite_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageFacebook"
                                android:layout_width="@dimen/_25px"
                                android:layout_height="@dimen/_25px"
                                android:layout_marginStart="@dimen/_20px"
                                android:layout_marginTop="@dimen/_20px"
                                android:layout_marginBottom="@dimen/_20px"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_facebook"
                                tools:ignore="ContentDescription"
                                tools:src="@drawable/img_facebook" />

                            <TextView
                                android:id="@+id/txtFacebookOne"
                                style="@style/txt_OpenSansRomanBold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10px"
                                android:layout_marginTop="@dimen/_20px"
                                android:layout_marginEnd="@dimen/_10px"
                                android:layout_marginBottom="@dimen/_20px"
                                android:layout_weight="0.76"
                                android:textSize="@dimen/_18sp"
                                android:textColor="@color/social_login_text"
                                android:ellipsize="end"
                                android:lineSpacingExtra="@dimen/_1px"
                                android:singleLine="true"
                                android:text="@string/lbl_facebook"
                                tools:text="@string/lbl_facebook" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llGoogle"
                            style="@style/SocialBtnStyleWhite_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/_20px"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageGoogle"
                                android:layout_width="@dimen/_25px"
                                android:layout_height="@dimen/_25px"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_20px"
                                android:layout_marginTop="@dimen/_20px"
                                android:layout_marginBottom="@dimen/_20px"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_google"
                                tools:ignore="ContentDescription"
                                tools:src="@drawable/img_google" />

                            <TextView
                                android:id="@+id/txtGoogleOne"
                                style="@style/txt_OpenSansRomanBold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_10px"
                                android:layout_marginTop="@dimen/_20px"
                                android:layout_marginEnd="@dimen/_10px"
                                android:layout_marginBottom="@dimen/_20px"
                                android:layout_weight="0.7"
                                android:textSize="@dimen/_18sp"
                                android:textColor="@color/social_login_text"
                                android:ellipsize="end"
                                android:lineSpacingExtra="@dimen/_1px"
                                android:singleLine="true"
                                android:text="@string/lbl_google"
                                tools:text="@string/lbl_google" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/frameStackellipseeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <ImageView
                        android:id="@+id/imageEllipseEight"
                        android:layout_width="@dimen/_250px"
                        android:layout_height="@dimen/_120px"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="-50dp"
                        android:layout_marginBottom="-50dp"
                        android:scaleType="fitXY"
                         />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtConfirmation"
                            style="@style/txt_OpenSansRomanBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_marginTop="@dimen/_30px"
                            android:layout_marginEnd="@dimen/_10px"
                            android:layout_marginBottom="@dimen/_50px"
                            android:lineSpacingExtra="@dimen/_1px"
                            android:singleLine="true"
                            android:text="@string/msg_don_t_have_an_a"
                            android:textColor="@color/gray_trans_99"
                            android:textSize="@dimen/_15sp"
                            tools:text="@string/msg_don_t_have_an_a" />

                        <TextView
                            android:id="@+id/tvSignUp"
                            style="@style/txt_OpenSansRomanBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_30px"
                            android:layout_marginEnd="@dimen/_10px"
                            android:layout_marginBottom="@dimen/_50px"
                            android:lineSpacingExtra="@dimen/_1px"
                            android:singleLine="true"
                            android:text="@string/lbl_sign_up"
                            android:textColor="@color/login_text"
                            android:textSize="@dimen/_15sp"
                            tools:text="@string/lbl_sign_up" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
